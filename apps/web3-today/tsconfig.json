{
  "compileOnSave": false,
  "compilerOptions": {
    "pretty": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",
    "types": ["node"],
    "lib": ["es2017", "dom", "es2021"],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "files": ["../../typings/cssmodule.d.ts", "../../typings/image.d.ts"],
  "exclude": ["node_modules"],
  "include": ["src"]
}
